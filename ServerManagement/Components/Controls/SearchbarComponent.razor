<div class="input-group mb-3">

    <input type="text" class="form-control" placeholder="Search Servers"
           @bind-value="serverFilter"
           @bind-value:event="oninput"/>

    <button class="btn btn-outline-secondary" type="button"
            @onclick="HandleSearch"
            id="button-search">Search</button>
</div>


@code { 
    private string serverFilter = "";
    [Parameter]
    public EventCallback<string> SearchCallback { get; set; }

    public void HandleSearch()
    {
        SearchCallback.InvokeAsync(serverFilter);
    }

    public void ClearSearch()
    {
        serverFilter = string.Empty;
    }
}
